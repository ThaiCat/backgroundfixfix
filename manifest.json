{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "default_locale": "en",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "applications": {
    "gecko": {
      "id": "Background_FixFix@example.com",
      "strict_min_version": "58.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/*",
        "*://*.vimeo.com/*"
      ],
      "js": [
        "video-bg-play-content.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "*://*.youtube.com/*",
    "tabs",
    "webNavigation",
    "power"
  ],
  "background": {
    "scripts": ["video-bg-play-content.js"],
    "persistent": true
  }
}